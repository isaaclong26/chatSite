 <form class="form" id="addPost">
      <div class="form-group">
        <label>Title</label>
        <input class="form-input" type="text" id="postTitle" />
      </div>
      <div class="form-group">
        <label >Content</label>
        <input class="form-input" type="text" id="postContent" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Post</button>
      </div>
    </form>


{{#each posts as |post| }}
<div class="row align-center mb-5" style="border-style: solid;">
  
  <div style="width: 100%;"><h2>{{post.title}} by: {{post.user.name}}</h2></div>
  
  
    <div style="width: 100%;"><h3>{{post.content}}</h3></div>
  
</div>
{{/each}}


<script src="./js/addPost.js"></script>