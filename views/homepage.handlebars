 <form class="form" id="addPost">
      <div class="form-group">
        <label>Title</label>
        <input class="form-input" type="text" id="postTitle" />
      </div>
      <div class="form-group">
        <label >Content</label>
        <input class="form-input" type="text" id="postContent" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Post</button>
      </div>
    </form>


{{#each posts as |post| }}
<div class="row align-center mb-5">
  
    <div id="postInfo"><h2>{{post.title}}</h2>  <h3>{{post.user.name}}</h3></div>
  
  
    <h3>{{post.content}}</h3>
  
</div>
{{/each}}


<script src="./js/addPost.js"></script>